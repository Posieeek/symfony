{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produkcik</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Cena</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Typ </th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Utworzono</th>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Zaktualizowano</th>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Powrót do listy produtków</a>
        </li>
        <li>
            <a href="{{ path('product_edit', { 'id': product.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
